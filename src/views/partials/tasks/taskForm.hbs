<div >

    <h3>Add Task</h3>
    <form action="/tasks/add" method="POST">
        <div class="mb-3" >
            <label for="title">Write a title:</label>
            <input
                    type="text"
                    name="title"
                    placeholder="Title"
                    id="title"
                    class="form-control"
            >
        </div>

        <div class="mb-3" >
            <label for="description">Write a description:</label>
            <textarea
                    name="description"
                    placeholder="Description"
                    id="description"
                    class="form-control"
            ></textarea>
        </div>

        <button class="btn btn-primary" type="submit" >Add</button>

    </form>
</div>